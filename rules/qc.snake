""" rules for running multiqc and autoreport """

rule qccheck:
   input:
     expand("{data}/counts/{sample}_{read}_counts.tsv.gz", data = DATA, sample = SAMPLE, read = READS)
   output:
     "{data}/multiqc_report.html"
   params:
     job_name = "qc",
     path = "{data}",
     memory = "select[mem>5] rusage[mem=5]", # LSF format; change as needed
   log:
     "{data}/logs/multiqc.txt"
   threads:
     1
   shell:
     """
     multiqc {params.path} -o {params.path}
     """

